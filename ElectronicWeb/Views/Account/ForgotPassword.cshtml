<div class="container-login" style="margin-bottom: 5%; margin-top:5%">
    <h1>Password Reset</h1>
    <p class="card-text py-2">
        Enter your email address and we'll send you an email with instructions to reset your password.
    </p>
    <form asp-controller="Account" asp-action="ForgotPassword">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="text" id="email" name="email" placeholder="Input your email..." required>
        </div>
        <input class="btn btn-primary w-100" type="submit" value="Reset password" />
        <div class="d-flex justify-content-between mt-4">
            <a asp-controller="Account" asp-action="Login">Login</a>
            <a asp-controller="Account" asp-action="Register">Register</a>
        </div>
    </form>
    <div>
        @if (ViewBag.Status == 200)
        {
            <label style="color:green">@ViewBag.Message</label>
        }
        @if (ViewBag.Status == 400)
        {
            <label style="color:red">@ViewBag.Message</label>
        }
    </div>
</div>

