<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
@using ElectronicMedia.Core.Repository.Models;

@{
    Layout = "_AdminLayout";
}
<div class="container">
    <div class="card">
        <div class="card-body">

            <div class="col-lg-12 col-md-12 col-sm-12">
                <h3 class="box-title mt-5">General Info</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-product">
                        <tbody>
                            <tr>
                                <td width="500">Title</td>
                                <td>@Model.Title</td>
                            </tr>
                            <tr>
                                <td>Content	</td>
                                <td>@Html.Raw(@Model.Content)</td>
                            </tr>
                            <tr>
                                <td>AuthorName</td>
                                <td>@Model.AuthorName</td>
                            </tr>
                            <tr>
                                <td>CreatedDate</td>
                                <td>@Model.CreatedDate</td>
                            </tr>
                            <tr>
                                <td>PublishedDate</td>
                                <td>@Model.PublishedDate</td>
                            </tr>
                             <tr>
                                <td>UpdatedDate</td>
                                <td>@Model.UpdatedDate</td>
                            </tr>
                            UpdatedDate
                            <tr>
                                <td>Rate</td>
                                <td>@Model.Rate</td>
                            </tr>
                            <tr>
                                <td>Like</td>
                                <td>@Model.Like</td>
                            </tr>
                            <tr>
                                <td>Dislike</td>
                                <td>@Model.Dislike</td>
                            </tr>
                            <tr>
                                <td>Status</td>
                                @if (@Model.Status.ToString() == "Pending")
                                {
                                    <td style="color:blue">@Model.Status</td>
                                }
                                else if( @Model.Status.ToString() == "Approved")
                                {
                                    <td style="color:dodgerblue">@Model.Status</td>
                                }
                                else if (@Model.Status.ToString() == "Published")
                                {
                                    <td style="color:green">@Model.Status</td>
                                }
                                else
                                {
                                    <td style="color:red">@Model.Status</td>
                                }
                               
                            </tr>
                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table-product.table-striped tbody tr:nth-of-type(odd) {
        background-color: #f3f8fa !important
    }

    .table-product td {
        border-top: 0px solid #dee2e6 !important;
        color: #728299 !important;
    }
</style>