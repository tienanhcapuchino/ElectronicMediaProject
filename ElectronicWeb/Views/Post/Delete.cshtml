<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
@using ElectronicMedia.Core.Repository.Models;

@{
    Layout = "_AdminLayout";
}

@if (ViewBag.Message== null)
{
    <div class="container">
        <div class="card">
            <div class="card-body">

                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">Delete Post</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                                <tr>
                                    <td width="500">Title</td>
                                    <td>@Model.Title</td>
                                </tr>
                                <tr>
                                    <td>Content	</td>
                                    <td>@Html.Raw(@Model.Content)</td>
                                </tr>
                                <tr>
                                    <td>AuthorName</td>
                                    <td>@Model.AuthorName</td>
                                </tr>
                                <tr>
                                    <td>CreatedDate</td>
                                    <td>@Model.CreatedDate</td>
                                </tr>
                                <tr>
                                    <td>PublishedDate</td>
                                    <td>@Model.PublishedDate</td>
                                </tr>

                            </tbody>
                        </table>
                        <form asp-controller="Post" asp-action="Delete" method="post">
                            <!-- Message input -->
                            <input type="hidden" name="postId" value="@Model.Id" />
                            <div class="form-outline mb-4">
                                <label class="form-label text-danger" for="form4Example3">Enter the reason you deleted the post</label>
                                <textarea name="message" class="form-control" id="form4Example3" rows="4" placeholder="Give the author a few reasons to let them know why you removed their post."></textarea>
                            </div>
                            <div>
                                <a asp-controller="Post" asp-action="Index" class="text-success"><i class="bi bi-arrow-return-left"></i> Back to list</a>
                                <button type="submit" class="btn btn-danger btn-lg btn-block">DELETE</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h1>@ViewBag.Message</h1>
    <div>
        <a asp-controller="Post" asp-action="Index" class="text-success"><i class="bi bi-arrow-return-left"></i> Back to list</a>
    </div>
}





<style>
    .table-product.table-striped tbody tr:nth-of-type(odd) {
        background-color: #f3f8fa !important
    }

    .table-product td {
        border-top: 0px solid #dee2e6 !important;
        color: #728299 !important;
    }
</style>
