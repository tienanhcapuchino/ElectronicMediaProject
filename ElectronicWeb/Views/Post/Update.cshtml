@using ElectronicWeb.Models;
@{
    Layout = "_AdminLayout";
}
@{
}
@model PostVM
<form asp-controller="Post" asp-action="Update" method="post">
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-5">
            <input asp-for=Title type="text" class="form-control" value="@Model.Title" placeholder="Title">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Content</label>
        <div class="col-sm-5">
            <textarea asp-for=Content class="form-control"  placeholder="Content here..." id="exampleFormControlTextarea1" rows="15">@Model.Content</textarea>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Image</label>
        <div class="col-sm-5">
            <div>
                <img src="https://mdbootstrap.com/img/Photos/Others/placeholder.jpg"
                     alt="example placeholder" style="width: 300px;" />
            </div>
            <div style="margin-top:10px">
                <div style="width:fit-content; height: fit-content" class="btn btn-primary btn-rounded">
                    <label class="form-label text-white m-1" for="customFile1">Choose file</label>
                    <input asp-for=Image type="file" class="form-control d-none" id="customFile1" />
                </div>
            </div>
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-sm-5">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Update</button>
        </div>
    </div>
    <div>
        <span style="color:red"> @ViewBag.Message</span>
    </div>
</form>
