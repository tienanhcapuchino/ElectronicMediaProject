@{
    Layout = "_AdminLayout";
}
@using ElectronicMedia.Core.Repository.Models;

<h1>Add new user</h1>

<form class="form form-controll" asp-controller="User" asp-action="DoAdd">
    <label>Fullname</label>
    <input name="user.FullName" class="form-control" required type="text" placeholder="enter fullname" />
    <label>Username</label>
    <input name="user.Username" class="form-control" required type="text" placeholder="enter username" />
    <label>Email</label>
    <input name="user.Email" class="form-control" required type="email" placeholder="enter email" />
    <label>Role</label>
    <select class="form-control" name="user.RoleName">
        <option value="NormalUser">NormalUser</option>
        <option value="Writer">Writer</option>
        <option value="Leader">Leader</option>
        <option value="EditorDirector">EditorDirector</option>
        <option value="Admin">Admin</option>
    </select>
    <label>Date of birth</label>
    <input class="form-control" type="date"/>
    <label>Phone number</label>
    <input name="user.PhoneNumber" class="form-control" required maxlength="10" type="number" placeholder="enter phone number" />
    <label>Gender</label>
    <select class="form-control" name="user.Gender">
        <option value="0">Unknown</option>
        <option value="1">Male</option>
        <option value="2">Female</option>
    </select>
    <input type="submit" value="Add" class="btn btn-primary" />
</form>
