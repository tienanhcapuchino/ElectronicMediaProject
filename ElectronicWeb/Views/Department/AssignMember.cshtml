@{
    Layout = "_AdminLayout";
}
@using ElectronicMedia.Core.Repository.Models;
@model List<MemberModel>;

<h1>Assign members</h1>

@{
    if (!Model.Any())
    {
        <p>we don't have any members to assign. Let create user as writer first!</p>
    }
    if (ViewBag.AssignSuccess != null)
    {
        <p class="text-success">@ViewBag.AssignSuccess</p>
    }
}

<table class="table">
    <thead>
        <tr>
            <th>Fullname</th>
            <th>Email</th>
            <th>Dob</th>
            <th>Phone number</th>
            <th>Gender</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null && Model.Any())
            {
                foreach (MemberModel item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.Dob.ToString("dd/MM/yyyy")</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Gender</td>
                        <td>
                            <a asp-route-memId="@item.MemberId" asp-route-check="false" asp-controller="Department" asp-action="DoAssign" asp-route-depId="@ViewBag.DepId" class="btn btn-success">Assign</a>
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>