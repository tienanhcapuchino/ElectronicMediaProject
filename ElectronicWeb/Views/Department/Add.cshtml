@{
    Layout = "_AdminLayout";
}
@using ElectronicMedia.Core.Repository.Models;
@model DepartmentModel
<h1>Add new department</h1>
@{
    if (ViewBag.ErrorAdd != null)
    {
        <p class="text-danger">@ViewBag.ErrorAdd</p>
    }
}
<form asp-controller="Department" asp-action="OnAdd" class="form form-controll">
    <label>Name</label>
    <input class="form-controll" type="text" name="department.Name" /><br /> <br />
    <label>Description</label>
    <textarea name="department.Description" class="form-controll"></textarea><br />
    <input class="btn btn-primary" type="submit" value="Add" />
</form>